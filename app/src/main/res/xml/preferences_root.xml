<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        android:title="@string/set_vertretung_title"
        app:fragment="com.asdoi.gymwen.ui.fragments.SettingsFragmentVertretungsplan" />
    <Preference
        android:title="@string/set_design_title"
        app:fragment="com.asdoi.gymwen.ui.fragments.SettingsFragmentDesign" />
    <Preference
        android:title="@string/set_notification_title"
        app:fragment="com.asdoi.gymwen.ui.fragments.SettingsFragmentNotification" />
    <Preference
        android:title="@string/set_vertretung_signin"
        app:fragment="com.asdoi.gymwen.ui.fragments.SettingsFragmentSignIn" />


    <PreferenceCategory android:title="@string/set_other_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="parents"
            android:title="@string/set_parents" />
        <Preference
            android:key="language"
            android:title="@string/menu_language" />
        <Preference
            android:key="updates"
            android:title="@string/menu_update" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="beta_features"
            android:title="@string/set_beta_features"
            app:isPreferenceVisible="true" />
    </PreferenceCategory>

</PreferenceScreen>
