<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vertretung_all_entry_textViewCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Klasse"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vertretung_all_entry_textViewHour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Stunde"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vertretung_all_entry_textViewSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Fach"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vertretung_all_entry_textViewTeacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Lehrer"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vertretung_all_entry_textViewRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Raum"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vertretung_all_entry_textViewOther"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Sonstiges"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>